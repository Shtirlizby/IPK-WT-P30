@{
    ViewData["Title"] = "Главная страница";
}

<div class="text-center">
    <h1 class="display-4">Добро пожаловать!</h1>
    <p>Это главная страница приложения.</p>
    
    @if (Context.Session.GetString("IsAuthenticated") == "true")
    {
        <div class="alert alert-success">
            Вы вошли как: @Context.Session.GetString("Username")
        </div>
        <a href="@Url.Action("Secret")" class="btn btn-primary">Секретная страница</a>
        <a href="@Url.Action("Logout")" class="btn btn-secondary">Выйти</a>
    }
    else
    {
        <a href="@Url.Action("Login")" class="btn btn-primary">Войти</a>
    }
    
    <hr />
    <a href="@Url.Action("Index", "Items")" class="btn btn-outline-primary">Список товаров</a>
</div>