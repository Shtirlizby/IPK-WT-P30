@model List<Task04.Web.Models.Item>
@{
    ViewData["Title"] = "Список товаров";
}

<h2>Список товаров</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Описание</th>
            <th>Цена</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info">Детали</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a href="@Url.Action("Search")" class="btn btn-outline-primary">Поиск товаров</a>
</div>